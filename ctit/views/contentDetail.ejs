<%- include header %>

<div class="row js-panel-row">

    <div class="col-sm-9 ">
        <ol class="breadcrumb">
            <li><a href="/" title="Go Home">Home</a></li>
            <li>
                <a href="/content/category?categoryId=<%= doc.category %>&page=1" title="view by category"><%= doc.categoryName %></a>
            </li>
            <li class="active"><%= doc.name %> detail</li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    <a href="/content/detail?id=<%= doc._id %>&view=contentDetail" title="reload <%= doc.name %>"><i class="glyphicon glyphicon-bookmark"></i>&nbsp;<%= doc.name %></a>
                    <% if(session.user!=null && session.user._id == doc.author){ %>
                    <a href="/content/detail?id=<%=doc._id%>&view=editContent" class="btn btn-primary pull-right" role="button">
                        <i class="glyphicon glyphicon-pencil"></i>&nbsp;Edit
                    </a>
                    <% } %>
                    <div class="clearfix"></div>
                </h4>

                <div class="media color-gray">
                    <span title="ahther"><i
                                class="glyphicon glyphicon-pencil"></i>&nbsp;<%- doc.userName %></span>
                    <span title="category"><i
                                class="glyphicon glyphicon-tag col-sm-offset-1"></i>&nbsp;<%- doc.categoryName %></span>
                    <span title="time"><i
                                class="glyphicon glyphicon-time  col-sm-offset-1"></i>&nbsp;<%- doc.createTime %></span>
                    <span title="view count"><i
                                class="glyphicon glyphicon-eye-open  col-sm-offset-1"></i>&nbsp;<%= doc.view %></span>
                </div>

            </div>
            <div class="panel-body">
                <div><%- doc.content %></div>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="jumbotron js-menu-bar">
            <p><a href="/content/addPage?view=addContent" class="btn btn-primary btn-lg" role="button">
                    <i class="glyphicon glyphicon-pencil"></i>&nbsp;Post content
                </a>
            </p>
        </div>
    </div>
</div>
<%- include footer %>
