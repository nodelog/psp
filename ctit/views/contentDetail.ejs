<%- include header %>
<ol class="breadcrumb">
    <li><a href="/index">Home</a></li>
    <li>
        <a href="/content/category?id=<%= doc.category.id %>&name=<%= doc.category.name %>&page=1"><%= doc.category.name %></a>
    </li>
    <li class="active">Content Detail</li>
</ol>
<div class="row js-panel-row">

    <div class="col-sm-9 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    <a title="<%= doc.name %>"><i class="glyphicon glyphicon-bookmark"></i>&nbsp;<%= doc.name %></a>
                    <% if(session.user!=null && session.user._id == doc.author.id){ %>
                    <a href="/" class="btn btn-primary pull-right" role="button">
                        <i class="glyphicon glyphicon-pencil"></i>&nbsp;Edit
                    </a>
                    <% } %>
                    <div class="clearfix"></div>
                </h4>

                <div class="media color-gray">
                    <span title="ahther"><i
                                class="glyphicon glyphicon-pencil"></i>&nbsp;<%- doc.userName %></span>
                    <span title="category"><i
                                class="glyphicon glyphicon-tag col-sm-offset-1"></i>&nbsp;<%- doc.categoryNameame %></span>
                    <span title="time"><i
                                class="glyphicon glyphicon-time  col-sm-offset-1"></i>&nbsp;<%- doc.createTime %></span>
                    <span title="view count"><i
                                class="glyphicon glyphicon-eye-open  col-sm-offset-1"></i>&nbsp;<%= doc.view %></span>
                </div>

            </div>
            <div class="panel-body">
                <div><%- doc.content %></div>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="jumbotron js-menu-bar">
            <p><a href="/content/addPage?view=addContent" class="btn btn-primary btn-lg" role="button">
                    <i class="glyphicon glyphicon-pencil"></i>&nbsp;Post content
                </a>
            </p>
        </div>
    </div>
</div>
<%- include footer %>
