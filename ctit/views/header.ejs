                        </div>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Password:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control js-login-password" value="ddd" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary col-sm-12 js-signIn-btn">Sign in</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="container js-register-panel">
                    <form action="javascript:void(0)" class="form-horizontal l-register-panel" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">UserName:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control js-register-username" value="wyc"  placeholder="UserName"/>
