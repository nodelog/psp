                <li><a href="javascript:void(0)" class="js-register-btn color-white">Register</a></li>
            </ul>
            <div class="hide">
                <div class="js-login-panel">
                    <div class="js-error-panel"></div>
                    <form action="javascript:void(0)" class="form-horizontal l-login-panel" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">UserName:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control js-login-username" value="jack" placeholder="UserName">
