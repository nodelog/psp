<%- include header %>
<ol class="breadcrumb">
    <li><a href="/manager">Home</a></li>
    <li class="active">Content Manager</li>
</ol>
<h3>Content Manager</h3>
<% if(docs.length > 0){ %>
<table class="table table-hover">
    <thead>
    <tr>
        <th>No.</th>
        <th>title</th>
        <th>author</th>
        <th>category</th>
        <th>create time</th>
        <th>modify time</th>

        <th>operation</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < docs.length;i++){ %>
    <tr>
        <td><%= i + 1 %></td>
        <td><a href="/content/detail?id=<%= docs[i]._id %>&view=manager/contentDetail"
               title="<%= docs[i].name %>"><%= docs[i].name.length > 10 ? docs[i].name.substring(0, 10) + "..." : docs[i].name %></a>
        </td>
        <td><%- docs[i].userName %></td>
        <td><%- docs[i].categoryName %></td>
        <td><%=: docs[i].createTime | format %></td>
        <td><%=: docs[i].modifyTime | format %></td>
        <td>
        <%if(session.user._id==docs[i].author){%>
            
            <input type="checkbox" data-id="<%= docs[i]._id %>" data-type="<%= docs[i].status %>"
                   class="js-content-status"/>
        <%}%>
        <a href="javascript:void(0)" class="js-content-delete" data-id="<%= docs[i]._id %>">删除</a>
        </td>
    </tr>
    <% } %>
    </tbody>
</table>
<ul class="pager">
    <li class="previous"><a href="javascript:void(0)" class="js-pre-page" data-url="content" data-page="<%= page %>"
                            data-total="<%= totalPage %>">&larr; Older</a></li>
    <li class="next"><a href="javascript:void(0)" class="js-next-page" data-url="content" data-page="<%= page %>"
                        data-total="<%= totalPage %>">Newer &rarr;</a></li>
</ul>
<% }else{ %>
<div class="alert alert-warning" role="alert">暂无数据</div>
<% } %>
<%- include footer %>
<script>
    $(function () {
        $('.js-content-manager').addClass("panel-primary");
    });
</script>