<%- include header %>
<script>
$(function(){
    $('.js-panel-menu .panel-primary').removeClass("panel-primary");
    $('.js-user-manager').addClass("panel-primary");
});
</script>
<div class="page-header">
    <h3> User Manager</h3>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th>No</th>
        <th>userName</th>
        <th>createTime</th>
        <th>modifyTime</th>
        <th>status</th>
        <th>operation</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < docs.length;i++){
        if(docs[i].role==1){
    %>
    <tr>
        <td><%= i+1 %></td>
        <td><%= docs[i].userName %></td>
        <td><%= docs[i].createTime %></td>
        <td><%= docs[i].modifyTime %></td>
        <td data-id="<%=docs[i]._id%>">
            <input type="checkbox" data-type="<%= docs[i].status%>" class="js-user-status"/></td>
        <td><a href="javascript:void(0)" class="js-user-delete" data-id="<%=docs[i]._id%>">删除</a></td>
    </tr>
    <% }} %>
    </tbody>
</table>
<ul class="pager">
    <li class="previous"><a href="javascript:void(0)" class="js-pre-page" data-page="<%=page%>" data-total="<%=totalPage%>">&larr; Older</a></li>
    <li class="next"><a href="javascript:void(0)" class="js-next-page" data-page="<%=page%>" data-total="<%=totalPage%>">Newer &rarr;</a></li>
</ul>
<%- include footer %>  