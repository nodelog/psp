<%- include header %>
<ol class="breadcrumb">
    <li><a href="/manager">Home</a></li>
    <li class="active">User Manager</li>
</ol>
<h3> User Manager</h3>
<% if(docs.length > 0){ %>
<table class="table table-hover">
    <thead>
    <tr>
        <th>No.</th>
        <th>name</th>
        <th>create time</th>
        <th>modify time</th>
        <th>status</th>
        <th>operation</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < docs.length;i++){
            if(docs[i].role == 1){
    %>
    <tr>
        <td><%= i + 1 %></td>
        <td><%= docs[i].userName %></td>
        <td><%=: docs[i].createTime | format %></td>
        <td><%=: docs[i].modifyTime | format %></td>
        <td>
            <input type="checkbox" data-id="<%= docs[i]._id %>" data-type="<%= docs[i].status %>"
                   class="js-user-status"/></td>
        <td><a href="javascript:void(0)" class="js-user-delete" data-id="<%= docs[i]._id %>">删除</a></td>
    </tr>
    <% }} %>
    </tbody>
</table>
<ul class="pager">
    <li class="previous"><a href="javascript:void(0)" class="js-pre-page" data-url="user" data-page="<%= page %>"
                            data-total="<%= totalPage %>">&larr; Older</a></li>
    <li class="next"><a href="javascript:void(0)" class="js-next-page" data-url="user" data-page="<%= page %>"
                        data-total="<%= totalPage %>">Newer &rarr;</a></li>
</ul>
<% }else{ %>
<div class="alert alert-warning" role="alert">暂无数据</div>
<% } %>
<%- include footer %>
<script>
    $(function () {
        $('.js-user-manager').addClass("panel-primary");
    });
</script>